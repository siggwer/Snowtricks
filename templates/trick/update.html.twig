{% extends "base.html.twig" %}

{% block body %}
    <div class="container my-5">
        <div class="row">
            <div class="col-12">
                <div class="bg-light addtrick">
                    <div class="card">
                        <div class="card-body">
                            <h3>Modifier le trick</h3>
                            {{ include("trick/_form.html.twig", { form: form }) }}
                            {{ include('trick/_delete.html.twig', { trick: form.vars.data }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        //function button picture on front
        $(function() {

            $(".trick-video").on("click", function() {
                $("#trick_videos").append(($("#trick_videos").data("prototype")).replace(/__name__/g, $("#trick_videos").data("index")));

                $("#trick_videos").data("index", parseInt($("#trick_videos").data("index")) + 1);
            });

            $("body").on("click", ".remove-video", function() {
                $($(this).data("target")).remove();
            });

        })
    </script>
{% endblock %}